<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.edu.unlp.info.lifia.tvd.remote" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TAC Control Remoto</name>
    <description>
        Aplicaci?n para controlar remotamente los  set top boxes TAC.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Lifia
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <preference name="Orientation" value="portrait" /> 
    <preference name="SplashScreenDelay" value="3000" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon-36x36.png" density="ldpi" />
        <icon src="res/android/icon-48x48.png" density="mdpi" />
        <icon src="res/android/icon-72x72.png" density="hdpi" />
        <icon src="res/android/icon-96x96.png" density="xhdpi" />

        <splash src="res/android/splash-320x200.png" density="land-ldpi"/>
        <splash src="res/android/splash-480x320.png" density="land-mdpi"/>
        <splash src="res/android/splash-800x480.png" density="land-hdpi"/>
        <splash src="res/android/splash-1280x720.png" density="land-xhdpi"/>

        <splash src="res/android/splash-200x320.png" density="port-ldpi"/>
        <splash src="res/android/splash-320x480.png" density="port-mdpi"/>
        <splash src="res/android/splash-480x800.png" density="port-hdpi"/>
        <splash src="res/android/splash-720x1280.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
